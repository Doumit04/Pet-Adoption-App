<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:layout_margin="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Pet Name -->
        <TextView
            android:id="@+id/pet_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/pet_name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Pet Age -->
        <TextView
            android:id="@+id/pet_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/pet_age"
            android:textSize="16sp"
            android:textColor="#4D4D4D"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pet_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Pet Type -->
        <TextView
            android:id="@+id/pet_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/pet_type"
            android:textSize="16sp"
            android:textColor="#4D4D4D"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pet_age"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Pet Breed -->
        <TextView
            android:id="@+id/pet_breed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/pet_breed"
            android:textSize="16sp"
            android:textColor="#4D4D4D"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pet_type"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Pet Location -->
        <TextView
            android:id="@+id/pet_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/pet_location"
            android:textSize="16sp"
            android:textColor="#4D4D4D"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pet_breed"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Pet Description -->
        <TextView
            android:id="@+id/pet_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/pet_description"
            android:textSize="16sp"
            android:textColor="#4D4D4D"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pet_location"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Adopt Me Button -->
        <Button
            android:id="@+id/button_adopt_me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Adopt Me"
            android:backgroundTint="#C2185B"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/pet_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
